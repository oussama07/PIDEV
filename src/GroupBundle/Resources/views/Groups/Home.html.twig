                <div class="container body-content"  style="border: 1px solid black; display :block ;
                  width: 77% ;padding:0 7% ;background:#f4f7f8;border-radius: 8px;">

                    <div class="container" style="padding: auto;">

                        <div class="row justify-content-start" style="padding-top:10px;">

                            <div class="col" style="padding-top:10px;">
                                <img src="{{ asset('img/group.png') }}" style="width: 50px ; height: 50px" >{{ p.idM.getUsername() }}
