                            </div>
                            <div class="col" style="padding-top:10px;">
                                <label> </label>



                            </div>
                        </div>
                        <div class="row justify-content-body" style="padding-top:10px; padding-left: 10%">
                <p class="text-black-20">
                {{ p.Msg }}
                </p>
                </div>
                <div class="row justify-content-center" style="padding-top:10px;">

                </div>
                <div class="row justify-content-end" style="padding-top:10px; ">

                    <div >
                        {% set A = 1 %}
                        {% for L in likes %}
                            {% if L.idU.getId() == idU and L.idP.getId()==p.id and A == 1 %}
                        <a href="{{ path('UnLike',{'id':p.id,'idG':group.id}) }}"  style="display: block">
                            <img  id="sup" src="{{ asset('Like.svg.png') }}" width="40px" height="40px" id="like" onclick="Like()">
                        </a>
                                {% set A = 0 %}
                            {% endif %}
                        {% endfor %}
                        {% if A == 1 %}
                            <a href="{{ path('Like',{'id':p.id,'idG':group.id}) }}"  style="display: block">
                                <img  id="sup" src="{{ asset('unLike.png') }}" width="40px" height="40px" id="like" onclick="Like()">
                            </a>
                        {% endif %}
                        <p style="margin: 0px 40px "> {{ p.nbLike  }} Likes</p>
                    </div>


                </div>
                </div>
                </div>
            </p>
            {% endfor %}

        </div>
